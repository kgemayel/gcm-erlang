{application, gcm, [
    {description, "An Erlang client for Google Cloud Messaging (GCM)"},
    {vsn, "1.0.1"},
    {registered, [gcm_sup]},
    {applications, [
        kernel,
        stdlib,
        inets,
        ssl,
        jsx,
        hackney
    ]},
    {mod, {gcm_app, []}},
    {env, [
        {gcm, []},
        {hackney, [
            {pool_name, gcm}, {timeout, 150000}, {max_connections, 100}
        ]}
    ]}
]}.
